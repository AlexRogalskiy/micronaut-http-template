<configuration>
    <contextName>${BUILD_NUMBER:-1}</contextName>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <charset>UTF-8</charset>
            <pattern>%cyan(%d{HH:mm:ss.SSS}) [%cn] %highlight(%-5level) %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="ASYNC" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="STDOUT"/>
    </appender>

    <root level="${ROOT_LOG_LEVEL:-WARN}">
        <appender-ref ref="ASYNC"/>
    </root>

    <logger level="${SX_LOG_LEVEL:-INFO}" name="sx.microservices"/>
    <logger level="${SX_LOG_LEVEL:-INFO}" name="sx.microservices.fias"/>

    <logger level="DEBUG" name="sx.microservices.fias.Application"/>
    <logger level="INFO" name="io.micronaut.runtime.Micronaut"/>
</configuration>